{
  "C_Cpp.clang_format_style": "Visual Studio",
  "editor.formatOnSave": true,
  "[cpp]": {
    "editor.quickSuggestions": true
  },
  "[c]": {
    "editor.quickSuggestions": true
  },
  "C_Cpp.intelliSenseEngineFallback": "Enabled",
  "idf.espIdfPath": "${env:HOME}/esp/esp-idf",
  "idf.toolsPath": "${env:HOME}/.espressif",
  "idf.pythonBinPath": "${env:HOME}/.espressif/python_env/idf4.0_py3.8_env/bin/python",
  "idf.customExtraPaths": "${env:HOME}/.espressif/python_env/idf4.0_py3.8_env/bin:${env:HOME}/.pyenv/shims:${env:HOME}/.espressif/tools/xtensa-esp32-elf/esp-2019r2-8.2.0/xtensa-esp32-elf/bin:${env:HOME}/.espressif/tools/esp32ulp-elf/2.28.51.20170517/esp32ulp-elf-binutils/bin:${env:HOME}/.espressif/tools/openocd-esp32/v0.10.0-esp32-20190313/openocd-esp32/bin",
  "idf.customExtraVars": "{\"OPENOCD_SCRIPTS\":\"${env:HOME}/.espressif/tools/openocd-esp32/v0.10.0-esp32-20190313/openocd-esp32/share/openocd/scripts\"}",
  "terminal.integrated.shellArgs.linux": [
    "-c",
    "source ${env:HOME}/esp/esp-idf/export.sh; exec $SHELL"
  ]
}